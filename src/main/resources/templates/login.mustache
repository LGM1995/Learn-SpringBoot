{{>layout/topnavigation}}
<div id="posts_list">
  <div class="container col-md-6">
    <form action="/user" method="post">
      <div class="form-group">
        <label>아이디</label>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <input type="text" class="form-control" name="userId" placeholder="아이디를 입력해주세요">
      </div>
      <div class="form-group">
        <label>비밀번호</label>
        <input type="password" class="form-control" name="password" placeholder="비밀번호를 입력해주세요">
      </div>
      <button type="submit" class="btn btn-primary bi bi-person"> 로그인</button>
    </form>
  </div>
</div>
